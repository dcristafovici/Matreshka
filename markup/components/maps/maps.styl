.maps
  position relative
  height 810px
  &::before
    content: '';
    display: block;
    position: absolute;
    width: 100%;
    height: -webkit-calc(100% + 2px);
    height: calc(100% + 2px);
    top: -1px;
    left: 0;
    z-index: 1;
    pointer-events: none;
    background: linear-gradient(180deg, #000000 12.73%, rgba(0, 0, 0, 0) 52.54%, #000000 94.61%);
    background-size: cover;

#maped
  position absolute
  left 0
  top 0
  width 100%
  height 100%

.maps #maped [class*="ymaps-2"] [class*="ground-pane"] {
    -webkit-filter: grayscale(0.9) invert(0.71) contrast(1.85);
    filter: grayscale(0.9) invert(0.71) contrast(1.85);
}

.maps #maped [class*="ymaps-2"] [class*="placemark-overlay"] [class*="image"] {
    background-repeat: no-repeat;
    -webkit-background-size: contain;
    background-size: contain;
}