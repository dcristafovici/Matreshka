.bar
  padding-top 120px
  padding-bottom 120px
  &-wrapper
    display flex
    justify-content space-between
  &-item
    width 45%
    &__name
      margin-bottom 40px;

    &__list
      margin-bottom 70px
      ul
        li
          display flex
          align-items flex-end
          margin-bottom 24px
          &:last-child
            margin-bottom 0
          i
            flex auto
            margin-left 13px
            margin-right 13px
            height 0.5px
            background rgba(255, 255, 255, 0.2);
          span
            font-size 20px
            line-height 1.2
            letter-spacing : 0.04em
            color $wh
            &:last-child
              color $gray
        