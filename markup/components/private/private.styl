.private
  position relative
  padding-bottom 120px
  padding-top 240px
  .content
    position relative
    z-index 3
  
  &-title
    margin-bottom 32px
    h1
      font-size 56px
  &-wrapper
    display flex
    justify-content space-between
    margin-bottom 60px
  &-left
    width 65.3333333333%
    p
      font-size 16px
      line-height 1.75
      font-family $Inter
      margin-bottom 20px
      &:last-child
        margin-bottom 0
  &-right
    width 30.6666666667%
  &-item
    margin-bottom 40px
    &:last-child
      margin-bottom 0
    &__name
      font-size 24px
      font-family $Light
      color $wh
      margin-bottom 15px
    ul
      li
        font-size 16px
        line-height 1.75
        color $wh
        font-family $Inter
        position relative
        padding-left 12px
        &::before
          content ''
          position absolute
          left 0
          top 12px
          width 4px
          height 4px
          border-radius 50%
          background $pink

.private
  &-bottom
    margin-bottom 60px
    h4
      text-transform uppercase
      margin-bottom 20px
      + span
        display block
        font-family $IMedium
        color $pink
        margin-bottom 10px
    p
      font-size 14px
      line-height 1.43
      color $wh
      margin-bottom 20px
      font-family $IExtraLight
      &:last-child
        margin-bottom 0