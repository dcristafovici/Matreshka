.about
  padding-bottom 50px
  &-item
    display flex  
    justify-content space-between
    align-items center
    &__content
      width 48%
      h2
        margin-bottom 30px
      p
        margin-bottom 20px
        &:last-child
          margin-bottom 0
    &__image
      width 48%
      position relative
      overflow hidden
      &::before
        content ''
        position absolute
        left 0%
        top 0%
        width 100%
        height 100%
        background: linear-gradient(0deg, #000000 29.93%, rgba(0, 0, 0, 0) 38.17%), linear-gradient(180deg, #000000 23.42%, rgba(0, 0, 0, 0) 39.52%), radial-gradient(41.46% 46.22% at 50% 50%, rgba(0, 0, 0, 0) 75.52%, #000000 100%)


    &:nth-child(2n)
      flex-direction row-reverse