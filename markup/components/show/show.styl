.show
  padding-top 75px
  padding-bottom 100px
  position relative
  background url('../img/assets/show/show.png') no-repeat center/cover
  h2
    margin-bottom 40px
  &-wrapper
    display flex
    justify-content space-between
    align-items center
  &-left
    width 48%
    p
      margin-bottom 20px
      &:last-child
        margin-bottom 0
  &-right
    width 48%

.show-video
  a
    position relative
    display flex
    justify-content center
    align-items center
    &:hover
      path,
      svg 
        fill $wh
  &__text
    position absolute
    left 0
    top 0
    width 100%
    z-index 2
    height 100%
    display flex
    justify-content center
    align-items center
    span
      font-size 32px  
      line-height 1
      letter-spacing 0.02em
      text-transform uppercase
      margin-right 20px
      text-align right
      color $wh
    svg
      transition $tr
  