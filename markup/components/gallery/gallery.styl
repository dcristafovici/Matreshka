.gallery
  padding-top 240px
  padding-bottom 120px
  &-title
    text-align center
    margin-bottom 40px
    h1
      font-size 56px
  &-tags
    margin-bottom 80px
    ul
      display flex
      align-items center
      justify-content center
      li
        margin-right 80px
        &:last-child
          margin-right 0
        a
          font-size 20px
          color $gray
          font-family $Light
          transition $tr
          &:hover
            color $wh
      li.active
        a
          color $wh
  &-items
    display flex
    flex-wrap wrap
    margin-bottom 20px
  &-item
    width 30.6666666667%
    margin-right 4%
    height 280px
    margin-bottom 40px
    img
      width 100%
      height 100%;
      object-fit cover
    &:nth-child(3n)
      margin-right 0
    