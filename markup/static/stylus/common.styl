body
  min-width 320px
  overflow-x hidden
  position relative
  font-size 16px
  font-family $ExtraLight
  background $bk

.content
  width 1200px
  margin 0 auto

main.matreshka-main
  overflow hidden


p
  font-family $Inter
  color $wh
  font-size 16px
  line-height 1.5
  &.pink
    color $pink

img
  max-width 100%
  max-height 100%
h1,
h2,
h3
  font-size 56px
  line-height 1.114
  color $pink
  font-family $ExtraLight
  letter-spacing: 0.02em
  transition $tr
  text-transform uppercase
  &:hover
    text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.25), 0px 1px 4px #FF00B2, 0px 4px 16px #FF00B2;
h2
  text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.25), 0px 1px 4px #FF00B2, 0px 4px 16px #FF00B2;
h1
  font-size 72px
h3
  font-size 48px
  line-height 1.5
h4
  font-size 32px
  color $wh
h5
  font-size 24px
  color $wh
a
  text-decoration none
  color inherit


.slick-slide 
  margin 0 23px
  outline none
.slick-list 
  margin 0 -23px

.slick-arrow
  width 48px
  height 48px
  display flex
  justify-content center
  align-items center
  outline none
  cursor pointer
  border none
  background none
  background: rgba(0, 0, 0, 0.6);
  border-radius 50%
  font-size 0
  position absolute
  left 70px
  top 50%
  margin-top -24px
  z-index 4
  transition $tr
  &:hover
    transform scale(1.33333)
    background: rgba(255, 0, 178, 0.6);
  &:active
    background $pink
    transform scale(1.2)
  &::before
    content ''
    position absolute
    left 50%
    top 50%
    width 16px
    height 16px
    margin-top -8px;
    margin-left -8px
    background url('../img/assets/interior/arr.svg') no-repeat center/contain
    
  &.slick-next
    left auto
    right 70px
    &::before
      transform rotate(180deg)