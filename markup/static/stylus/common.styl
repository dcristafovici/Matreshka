body
  min-width 320px
  overflow-x hidden
  position relative
  font-size 16px
  font-family $ExtraLight
  background $bk

.content
  width 1200px
  margin 0 auto

main.matreshka-main
  overflow hidden


p
  font-family $Inter
  color $wh
  font-size 16px
  line-height 1.5
  &.pink
    color $pink

img
  max-width 100%
  max-height 100%
h1,
h2,
h3
  font-size 56px
  line-height 1.114
  color $pink
  font-family $ExtraLight
  letter-spacing: 0.02em
  transition $tr
  text-transform uppercase
  &:hover
    text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.25), 0px 1px 4px #FF00B2, 0px 4px 16px #FF00B2;
h2
  text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.25), 0px 1px 4px #FF00B2, 0px 4px 16px #FF00B2;
h1
  font-size 72px
h3
  font-size 48px
  line-height 1.5
h4
  font-size 32px
  color $wh
h5
  font-size 24px
  color $wh
a
  text-decoration none
  color inherit